{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://localhost:5005;https://localhost:5005",

  "ReverseProxy": {
    "Routes": {
      "minimumroute": {
        "ClusterId": "minimumcluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      },
      "1order": {
        "ClusterId": "minimumcluster",
        "Match": {
          "Path": "1order/{**remainder}",
          "Methods" : [ "GET", "POST" ]
        }
      },
      "order" : {
        "ClusterId": "daprsidecar",
        "Match": {
          "Path": "/order/{**remainder}",
          "Methods" : [ "GET", "POST" ]
        },
        "Transforms": [
          { "PathPattern": "invoke/order-service/method/order/{**remainder}" }
        ]
      },
      "balance" : {
        "ClusterId": "daprsidecar",
        "Match": {
          "Path": "/balance/{**remainder}",
          "Methods" : [ "GET", "POST" ]
        },
        "Transforms": [
          { "PathPattern": "invoke/reservation-service/method/balance/{**remainder}" }
        ]
      }
    },
    "Clusters": {
      "minimumcluster": {
        "Destinations": {
          "httpbin.org": {
            "Address": "https://httpbin.org/"
          }
        }
      },
      "daprsidecar": {
        "Destinations": {
          "dapr": {
            "Address": "http://localhost:5050/v1.0/"
          }
        }
      }
    }
  }
}